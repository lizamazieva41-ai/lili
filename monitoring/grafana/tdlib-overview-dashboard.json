{
  "dashboard": {
    "title": "TDLib Overview",
    "tags": ["tdlib", "telegram"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Active TDLib Clients",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "tdlib_active_clients",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Sessions",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "tdlib_sessions_total{status=\"active\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "TDLib Requests Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "rate(tdlib_requests_total[5m])",
            "legendFormat": "{{method}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "TDLib Request Duration",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(tdlib_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{method}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(tdlib_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 - {{method}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "TDLib Errors",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "rate(tdlib_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Errors/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "Queue Depth",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "tdlib_queue_depth",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Jobs" },
          { "format": "short" }
        ]
      }
    ],
    "time": { "from": "now-1h", "to": "now" },
    "timepicker": {}
  }
}
